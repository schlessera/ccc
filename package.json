{
  "name": "claude-code-central",
  "version": "1.0.0",
  "description": "Centralized AI assistant configuration manager for multiple projects",
  "main": "dist/index.js",
  "bin": {
    "ccc": "./dist/cli/index.js",
    "claude-code-central": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "claude",
    "ai",
    "configuration",
    "management",
    "cli",
    "developer-tools"
  ],
  "author": "Alain Schlesser",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "conf": "^12.0.0",
    "figlet": "^1.7.0",
    "fs-extra": "^11.2.0",
    "ora": "^7.0.1",
    "update-notifier": "^6.0.2",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "mock-fs": "^5.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/schlessera/ccc.git"
  },
  "bugs": {
    "url": "https://github.com/schlessera/ccc/issues"
